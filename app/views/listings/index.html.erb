<%= link_to 'New Listing', new_listing_path, class: "btn btn-dark" %>
<br><br>

  <div class="row">
      <% @listings.each do |listing| %>
    <div class="col-md-3">
    <div class="wrap">
        <div class="thumbnail">

      </div><!--thumbnail-->
      <div class="caption">
          <h3><%= listing.name %></h3>
          <p><%= number_to_currency(listing.price) %></p>
        <%= link_to 'Show', listing, class: "btn btn-primary" %>
        <%= link_to 'Edit', edit_listing_path(listing), class: "btn btn-warning" %>
        <%= link_to 'Destroy', listing, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %>
      </div><!---caption-->
      </div>
    </div><!--col-md-3-->
  <% end %>
  </div><!--row-->
