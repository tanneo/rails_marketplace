<div class="center">
  <div class="jumbotron">
    <h1> Quality Australian Products! </h1>
    <h2> Shop Directly through Australian manufacturers </h2>
  </div>
  <div class="row">
  <% if Listing.joins(:image_attachment) %>
    <% @listings.each do |listing| %>

      <div class="col-md-3">
        <div class="wrap">
          <div class="thumbnail">
            <% if listing.image.attached? %>
              <%= link_to image_tag(listing.medium), listing %>
            <% end %>
              <div class="caption">
              <h3> <%= listing.name %></h3>
              <p><%= number_to_currency(listing.price) %></p>
              <p><%= "Sold by #{listing.user.name}" %></p>
              <%= link_to 'Show', listing, class: "btn btn-link" %>
              </div><!---caption-->
          </div><!--thumbnail-->
        </div> <!--wrap-->
      </div><!--col-md-3-->
    <% end %>
    <% end %>
  </div><!--row-->
</div> <!--center-->

<div class="center">
  <% if user_signed_in? %>
  <%= link_to 'New Listing', new_listing_path, class: "btn btn-dark" %> <!---Only signed in users can see link to post a new listing-->
  <% end %>
</div>

