<div class="center">
    <h2>Your sales history </h2>
</div>
    <table class="table table-striped table-bordered">
    <tr>
        <th>Image</th>
        <th>Item</th> 
        <th>Price</th>
        <th>Customer</th>
        <th>Date Sold</th>
    </tr>

        <% @orders.each do |order| %>
            <%if order.listing %>
            <tr>
                <td class="center"> <%= image_tag order.listing.thumbnail %></td>
                <td class="center"> <%= order.listing.name %></td>
                <td class="center"> <%= number_to_currency(order.listing.price) %></td>
                <td class="center"> <%= order.buyer.name %></td>
                <td class="center"><%= order.created_at.strftime("%-d, %B, %Y") %></td> <!-- Used Ruby time function and formatted to day, month year as in Australia-->
            </tr>
        <% end %>
        <% end %>
